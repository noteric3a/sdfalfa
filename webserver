from flask import Flask, request
from datetime import datetime
import pyautogui
import time
from pynput.keyboard import Key, Controller
import requests
import asyncio
import threading

keyboard = Controller()
def WeChatTask(message):
    print(pyautogui.size())
    pyautogui.moveTo(420, 1060, duration=0)
    pyautogui.click(420, 1060)

    time.sleep(1)

    # goes to wechat and clicks it

    pyautogui.moveTo(600, 280, duration=0.5)  # serena is 600, 280. test is 600, 350
    pyautogui.click(600, 280)

    time.sleep(1)

    # goes to serenas profile

    pyautogui.typewrite(message)

    # types the message

    keyboard.press(Key.enter)
    keyboard.release(Key.enter)

    # sends the message

    pyautogui.moveTo(2, 2)
    pyautogui.click(2, 2)

    # clicks off

app = Flask(__name__)

stopper = True
loop = asyncio.new_event_loop()
asyncio.set_event_loop(loop)

def handle_requests():
    global target_time
    global gmmessage
    global stopper
    global stop_num
    while True:
        response_time = requests.get('http://localhost:8080/get_time')
        target_time = response_time.json().get('variable_name')
        response_message = requests.get('http://localhost:8080/get_message')
        gmmessage = response_message.json().get('variable_name')
        response_stop = requests.get('http://localhost:8080/stop')
        stop_num = response_stop.json().get('variable_name')
        if stop_num == 1:
            stopper = False
            break
        time.sleep(10)

@app.route('/gm', methods=['POST','GET'])
def run_script():
    global stopper
    global target_time
    global gmmessage
    global stop_num
    stopper = True
    response = requests.get('http://localhost:8080/get_time')
    target_time = response.json().get('variable_name')
    response = requests.get('http://localhost:8080/get_message')
    gmmessage = response.json().get('variable_name')
    thread = threading.Thread(target=handle_requests)
    thread.start()
    while stopper:
        current_time = datetime.now().strftime("%H:%M:%S")
        try:
            if current_time == target_time:
                # does the task
                WeChatTask(gmmessage)
                # sends a success message to turn the embed green
                stopper = False
                return "Script started successfully.", 200
            time.sleep(1)
        except Exception as e:
            return f"Error: {e}", 500
    return "Script stopped.", 201

@app.route('/stop_gm', methods=['GET'])
def stop_gm():
    global stopper
    stopper = False
    return "",200

@app.route('/reroll_gm_message', methods=['GET'])
def reroll_gm_message():
    return "switched", 200

@app.route('/reroll_gm_time', methods=['GET'])
def reroll_gm_time():
    return "switched", 200

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)
